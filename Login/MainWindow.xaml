<Window x:Class="Login.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Login"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Title="CryptoPass - Connexion" Height="295" Width="400">
    <Grid>
        <StackPanel MaxHeight="485" MaxWidth="387" VerticalAlignment="Center">
            <Label FontSize="40" FontWeight="Bold" HorizontalAlignment="Center">CryptoPass</Label>
            <Label FontSize="20" Margin="15,15,15,0">Mot de passe maître</Label>
            <TextBox x:Name="TextBoxMaster" FontSize="25" Margin="20,5,20,0" />
            <Button x:Name="BtnAccess" FontSize="18" Height="40" Margin="20,20,20,0" Content="Déverouiller" />
        </StackPanel>
    </Grid>
</Window>
