<Window x:Class="Welcome.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Welcome"
        xmlns:viewmodels="clr-namespace:Welcome.ViewModels"
        xmlns:views="clr-namespace:Welcome.Views"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Title="CryptoPass - Bienvenue" Height="520" Width="400">
    <Window.Resources>
        <DataTemplate x:Name="Welcome1Template" DataType="{x:Type viewmodels:Welcome1ViewModel}">
            <views:Welcome1View DataContext="{Binding}" />
        </DataTemplate>
        <DataTemplate x:Name="Welcome2Template" DataType="{x:Type viewmodels:Welcome2ViewModel}">
            <views:Welcome2View DataContext="{Binding}" />
        </DataTemplate>
        <DataTemplate x:Name="Welcome3Template" DataType="{x:Type viewmodels:Welcome3ViewModel}">
            <views:Welcome3View DataContext="{Binding}" />
        </DataTemplate>
        <DataTemplate x:Name="WelcomePasswordTemplate" DataType="{x:Type viewmodels:PasswordViewModel}">
            <views:PasswordView DataContext="{Binding}" />
        </DataTemplate>
    </Window.Resources>
    <ContentControl Content="{Binding}" />
</Window>
